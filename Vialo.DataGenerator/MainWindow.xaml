<Window x:Class="Vialo.DataGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vialo.DataGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Image Name="imgTarget" Grid.Column="0" SnapsToDevicePixels="True"/>
        <StackPanel Name="container" Grid.Column="0" Orientation="Vertical"/>
        <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Bottom">
            <Button Name="btnLoad" Padding="16" Margin="5" Click="Load_Click">Load</Button>
            <Button Name="btnSave" Padding="16" Margin="5" Click="Save_Click">Save</Button>
            <Button Name="btnGenerate" Padding="16" Margin="5" Click="btnGenerate_Click">Generate</Button>
        </StackPanel>
    </Grid>
</Window>
